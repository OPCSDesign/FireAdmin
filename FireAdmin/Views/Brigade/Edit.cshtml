@model FireAdmin.Models.Brigade

@{
    ViewBag.Title = "Edit";
}

@section Scripts {

}

@section SideMenu {
    @Html.Partial("_SideMenuPartial", null, new ViewDataDictionary { { "main-menu", "SiteAdmin" }, { "sub-menu", "Brigades" } })
}

@section Breadcrumb {
    <li>
        @Html.ActionLink("Brigade", "Index")
    </li>
    <li class="current">
        @Html.ActionLink("Edit", "Edit")
    </li>
}

<!--=== Page Content ===-->
<div class="row padding-top-15px">
    <!--=== Horizontal Forms ===-->
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4><i class="icon-reorder"></i> Edit @Html.LabelFor(model => model.Name)</h4>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("Edit", "Brigade", FormMethod.Post, new { @class = "form-horizontal row-border" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Name, new { @type = "text", @name = "regular", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, null, new { @style = "color: red;" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" /> | @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /Horizontal Forms -->
</div>